<record id="template_form"  model="ir.ui.view">
        <field name="name">Templates</field>
        <field name="model">templates.frontdesk</field>
        <field name="arch" type="xml">

            <form>
                <sheet>
                    <group>
                     <group name="group-right">

                        <field name="template_name"/>
                        <field name="receipents"/>
                        
                        



                     </group>
                        <group name="group-left">
                            
                            <field name="sender"/>

                        </group>
                        </group>
                        <group>
                       <field name="subject"/>
                       </group>
                       <group>
                       <field name="desc"/>
                       </group>
                       <group>
                          <field name="template_save"/>
                       </group>
                       <group>
                       <button type="object" name="data_flow" string="Save as new template"
                                class="pull-right btn-primary" help="Save as a new template"/>
                       </group>   
                    
                </sheet>

            </form>



        </field>
    </record>


